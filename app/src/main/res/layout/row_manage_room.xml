<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="@dimen/cardview_round_basic"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <!-- ICON AND STATUS-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_base_line" />

            <Button
                android:id="@+id/btn_row_manage_apply_status"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="승인" />
        </LinearLayout>

        <!-- MAIN CONTENTS-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="4dp">
            <!-- DATE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE" />

            <TextView
                android:id="@+id/row_manage_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="" />

            <!-- PLACE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLACE" />

            <TextView
                android:id="@+id/row_manage_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="" />

            <!-- DESCRIPTION-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION" />

            <TextView
                android:id="@+id/row_manage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="" />
        </LinearLayout>


    </LinearLayout>


